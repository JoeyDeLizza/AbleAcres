<div class="grid h-screen place-items-center">

    <h1 class="mb-4 text-3xl font-extrabold tracking-tight pt-8">Gallery</h1>
    <div class="container px-5 mx-auto lg:pt-8 lg:px-32">
	<div class="flex flex-wrap -m-1 md:-m-2">
	    <% @pictures.each do |pic| %>
		<% if pic.image.attached? %>
		    <div class="flex flex-wrap w-1/3">
			<div class="w-full p-1 md:p-2">
			    <%= link_to image_tag(pic.image, style:"width:400px; height:400px", class:"rounded-lg border-4 w-full bg-white px-4 py-4")  %>
			</div>
		    </div>
		<% end %>
	    <% end %>
	</div>
    </div>
</div>
