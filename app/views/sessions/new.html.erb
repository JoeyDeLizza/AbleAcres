<div>
  <% if flash[:notice] %>
  <%= content_tag :h1, flash[:notice] %>
  <% else %>
  <%= content_tag :h1, "Please Log in" %>
  <% end %>
  <%= form_with url: sessions_path do |f| %>
 <div class="block"> <%= f.label :email, "Email: "%> </div>
  <%= f.text_field :email %><br>
 <div class="block"> <%= f.label :password, "Password: "%> </div>
  <%= f.password_field :password %><br>
  <%= link_to "Sign Up", new_user_path %>
  <%= f.submit "Sign In!" %>
  <% end %>
</div>
