
<div class="grid h-screen place-items-center">
<div class="w-full h-screen md:mb-12 md:h-min md:w-3/5 lg:w-1/3 bg-white grid md:place-items-center rounded border border-gray-700">
    <div class="m-3 md:w-3-5">
	<% if flash[:error] %>
	    <%= content_tag :h1, flash[:error] %>
	<% else %>
	    <%= content_tag :h1, "Please Sign Up", class: "text-sky-400" %>
	<% end %>
	<%= form_for @user, html: {class: "w-full maxw-lg"} do |f| %>
	    <div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
		    <%= f.label :FirstName, "FIRST NAME:", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"%>
		    <%= f.text_field :FirstName, class: "appearance-none block w-full bg-gray-200 text-gray-700 border-0 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
		</div>
		<div class="w-full md:w-1/2 px-3">
		    <%= f.label :LastName, "LAST NAME", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"%>
		    <%= f.text_field :LastName, class: "appearance-none block w-full bg-gray-200 text-gray-700 border-0 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
		</div>
	    </div>

	    <div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full px-3">
		    <%= f.label :email, "Email:", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"%>
		    <%= f.text_field :email, class: "appearance-none block w-full bg-gray-200 text-gray-700 border-0 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
		</div>
	    </div>

	    
	    <div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full px-3">
		    <%= f.label :password, "Password:", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
		    <%= f.password_field :password, class: "appearance-none block w-full bg-gray-200 text-gray-700 border-0 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
		    <%= link_to "Log in", new_session_path %>
		    <%= f.submit "Sign Up!" %>
	<% end %>
		</div>
	    </div>
    </div>
</div>
</div>


