<div class="p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-5">

    <% @products.each do |product| %>
	<% if product.pic.attached? %>
	    <div class="rounded overflow-hidden shadow-lg">
		<%=image_tag url_for(product.pic), class: "w-full", alt: "beefpatty" %>
		<div class="px-6 py-4">
		    <div class="font-bold text-xl mb-2"> <%= product.name %></div>
		    <p class="text-gray-700 text-base">
			<%= product.desc %>
		    </p>
		</div>
		<div class="px-6 pt-4 pb-2">
		    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"><%= number_to_currency(product.price, :precision => 2) %></span>
		</div>
	    </div>
	<% end %>
    <% end %>

    

    
</div>
