<div class="p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-5">
    <!--Card 1-->
    <a href="">
	<div class="rounded overflow-hidden shadow-lg">
	    <%=image_tag "beefpatty.jpg", class: "w-full", alt: "beefpatty" %>
	    <div class="px-6 py-4">
		<div class="font-bold text-xl mb-2">Beef Patties</div>
		<p class="text-gray-700 text-base">
		    1 lb of delicious free range beef patties
		</p>
	    </div>
	    <div class="px-6 pt-4 pb-2">
		<span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">$7.00</span>
	    </div>
	</div>
    </a>
</div>

<div class="p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-5">

    <% @products.each do |product| %>
	<div class="rounded overflow-hidden shadow-lg">
	    <%=image_tag url_for(product.pic), class: "w-full", alt: "beefpatty" %>
	    <div class="px-6 py-4">
		<div class="font-bold text-xl mb-2"> <%= product.name %></div>
		<p class="text-gray-700 text-base">
		    <%= product.desc %>
		</p>
	    </div>
	    <div class="px-6 pt-4 pb-2">
		<span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">$<%= product.price %></span>
	    </div>
	</div>
	<% end %>
</div>
