<div class="p-30 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-5">

    <% @products.each do |product| %>
	<% if product.pic.attached? %>
	    <div p-20>

		<div class="rounded overflow-hidden shadow-lg max-w-s ">
		    <%=image_tag url_for(product.pic), class: "w-full", alt: "beefpatty" %>
		    <div class="px-6 py-4">
			<div class="font-bold text-xl mb-2"> <%= product.name %></div>
			<p class="text-gray-700 text-base">
			    <%= product.desc %>
			</p>
		    </div>
		    <div>
			<div class="px-6 pt-4 pb-2 flex justify-between">
			    <div class="inline-block bg-gray-200 rounded-full px-3 py-1 text-md font-semibold text-gray-700 mr-2 mb-2"><div class="my-2"><%= number_to_currency(product.price, :precision => 2) %></div></div>
			    <div class =" flex justify-end">
				<div class="inline-block bg-gray-200 hover:bg-blue-200 rounded-full px-5 py-3 text-lg font-bold text-gray-700 mr-2 mb-2 mr-100"> +</div>
			    </div>
			</div>
		    </div>

		</div>
	    </div>
	<% end %>
    <% end %>

    

    
</div>
