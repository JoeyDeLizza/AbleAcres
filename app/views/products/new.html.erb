
<div class="w-full h-screen md:mb-12 md:h-min md:w-3/5 lg:w-1/3 bg-white grid md:place-items-center rounded border border-gray-700">
    <div class="m-3 md:w-3-5">
	<% if flash[:error] %>
	    <%= content_tag :h1, flash[:error] %>
	<% else %>
	    <% if flash[:success] %>
		<%=  content_tag :h1, flash[:success] %>
	    <% end %>
	    <%= content_tag :h1, "Add new Product", class: "text-sky-400" %>
	
	<% end %>
	<%= form_for @product, html: {class: "w-full maxw-lg"} do |f| %>
	    <div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
		    <%= f.label :name, "PRODCUT NAME:", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"%>
		    <%= f.text_field :name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border-0 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
		</div>
		<div class="w-full md:w-1/2 px-3">
		    <%= f.label :desc, "PRODUCT DESC:", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"%>
		    <%= f.text_field :desc, class: "appearance-none block w-full bg-gray-200 text-gray-700 border-0 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
		</div>
	    </div>

	    <div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full px-3">
		    <%= f.label :price, "PRICE:", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"%>
		    <%= f.number_field :price, step: 0.01, class: "appearance-none block w-full bg-gray-200 text-gray-700 border-0 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
		</div>
	    </div>

	    
	    <div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full px-3">
		    <%= f.file_field :pic %>
		    <%= f.submit "Add new product" %>
	<% end %>
		</div>
	    </div>
    </div>
</div>






